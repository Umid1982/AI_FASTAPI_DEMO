# Application
APP_NAME=AI Video Analytics Microservice
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# API Authentication
API_KEY=my-super-secret-key-123
X_API_KEY_HEADER=X-API-KEY

# Database
DATABASE_URL=postgresql://root:root@localhost:5432/ai_video_analytics
DATABASE_ECHO=False

# Video Processing
VIDEO_SOURCE=file
VIDEO_SOURCE_PATH=./videos/test_video.mp4
RTSP_URL=

# AI Models
YOLO_MODEL=yolov8n.pt
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45

# LLM Configuration
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_HEADERS=["*"]
# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
